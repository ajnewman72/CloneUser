         <tr>
            <td style="width:25%">
               <g:form_label>
                  Override Existing Roles &amp; Groups:
               </g:form_label>
            </td>
            <td style="width:60%">
               <g:ui_checkbox name="override_existing" id="override_existing" value="false"/>
